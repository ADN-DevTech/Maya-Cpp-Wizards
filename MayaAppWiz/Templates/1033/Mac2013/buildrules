INCL_BUILDRULES := 1

include $(TOP)/buildconfig

# Generic Rules
.PHONY: all plugins depend clean Clean
.DEFAULT: all

all: plugins

# Generic Rules
$(DSTDIR)/%.o : $(SRCDIR)/%.c
	$(CC) -c $(INCLUDES) $(CFLAGS) $< -o $@

$(DSTDIR)/%.o : $(SRCDIR)/%.cpp
	$(C++) -c $(INCLUDES) $(C++FLAGS) $< -o $@

$(DSTDIR)/%.i : $(SRCDIR)/%.cpp
	$(C++) -E $(INCLUDES) $(C++FLAGS) $(SRCDIR)/$*.cpp > $(DSTDIR)/$*.i
